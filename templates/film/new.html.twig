{% extends 'base.html.twig' %}

{% block title %}Create Film{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}
    <h4 class="text-center mt-5">Create your Film</h4>

    {{ form_start(form, {'attr': {'class':'container'}}) }}
    {{ form_row(form.name) }}
    {{ form_row(form.resume) }}
    {{ form_row(form.director) }}
    {{ form_row(form.createdAt) }}
    {{ form_row(form.imageFile) }}
    <button type="submit" class="btn">Create</button>
    {{ form_end(form) }}


{% endblock %}